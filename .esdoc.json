{
  "source": "./src",
  "destination": "./docs",
  "includes": [
	"DC.lib.js",
	"^Eth",
	"^DApps",
	"^utils"
  ],
  "plugins": [
		{"name": "esdoc-standard-plugin",
			"option": {
			  "lint": {"enable": false },
			  "coverage": {"enable": true},
			  
			  "accessor": {"access": ["public"], "autoPrivate": true},
			  
			  "undocumentIdentifier": {"enable": false },
			  "unexportedIdentifier": {"enable": false },
			  
			  "typeInference": {"enable": false},
			  
			  "brand": {
				"logo"        : "./logo.png",
				"title"       : "DCLib",
				"description" : "Inject ethereum in your app",
				"repository"  : "https://github.com/DaoCasino/DCLib",
				"site"        : "https://dao.casino",
				"author"      : "https://twitter.com/daocasino",
				"image"       : "https://dao.casino/images/chip.png"
			  },

			  "manual": {
				"globalIndex": false,
				"index": "./manual/index.md",
				"asset": "./manual/asset",
				
				"files": [
				  "./manual/overview.md",
				  "./manual/example.md"
				]
			  },

			  "test": {
		        "source": "./public/tests/",
		        "interfaces": ["describe", "it", "context", "suite", "test"],
		        "includes": ["(spec|Spec|test|Test)\\.js$"],
		        "excludes": ["\\.config\\.js$"]
		      }

			}
		},
		{
			"name": "esdoc-type-inference-plugin",
			"option": {
				"enable": true
			}
		}
	]
}